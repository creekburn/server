{
  "name": "server",
  "version": "0.0.1",
  "description": "Specification driven server",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "lerna": "lerna",
    "install": "lerna exec -- npm install",
    "lint": "eslint --fix packages",
    "doc": "jsdoc -c jsdoc.conf.json -t ./node_modules/ink-docstrap/template -R README.md -r ."
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:creekburn/server.git"
  },
  "author": "Adam Kaplan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/creekburn/server/issues"
  },
  "homepage": "https://github.com/creekburn/server#readme",
  "devDependencies": {
    "eslint": "7.12.1",
    "eslint-config-standard": "16.0.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.0",
    "eslint-plugin-jest-formatting": "2.0.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "ink-docstrap": "1.3.2",
    "jest": "26.6.1",
    "jsdoc": "3.6.6",
    "lerna": "3.22.1",
    "mime-matcher": "1.0.5"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "testMatch": [
          "<rootDir>/**/*.test.js"
        ]
      },
      {
        "displayName": "e2e",
        "testMatch": [
          "<rootDir>/**/*.e2e.js"
        ]
      }
    ]
  }
}
